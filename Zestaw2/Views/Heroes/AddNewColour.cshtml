@model Zestaw2.Models.Heroes.Colour

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Dodaj nowy kolor</h2>
<form asp-action="AddNewColour" method="post">
    <div class="form-group mt-3"> 
        <label asp-for="Colour1" class="control-label"></label>
        <input asp-for="Colour1" class="form-control" />
        <span asp-validation-for="Colour1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Zapisz"/>
    </div>
</form>
